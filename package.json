  "bugs": {
    "url": "https://github.com/iandavidchapman/ai-containment-detection/issues"
  },
  "homepage": "https://github.com/iandavidchapman/ai-containment-detection#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "promptfoo": "^0.90.0",
    "simple-statistics": "^7.8.0",
    "natural": "^6.12.0",
    "compromise": "^14.13.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  }
